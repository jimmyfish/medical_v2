{% extends 'base.html.twig' %}

{% block title %}Detail{% endblock %}

{% block content %}
    <div class="content">
        <div class="block">
            <div class="block-header block-header-default">
                <h2 class="block-title">Detail STP - {{ data.sampel.kodeSampel }}</h2>
            </div>
            <div class="block-content">
                <div class="row">
                    <div class="col-md-6">
                        <p>Nama Pelanggan : <strong>{{ data.pelanggan.nama }}</strong></p>
                        <p>Alamat : <strong>{{ data.pelanggan.alamat }}</strong></p>
                        <p>Telepon : <strong>{{ data.pelanggan.telepon }}</strong></p>
                    </div>
                    <div class="col-md-6 text-right">
                        <h2>{{ data.sampel.kodeSampel }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}